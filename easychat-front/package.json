{
  "name": "easychat-front",
  "version": "1.0.0",
  "description": "EasyChat",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://www.electronjs.org",
  "codeversion": "0171675114",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "start": "electron-vite preview",
    "dev": "export LANG=en_US.UTF-8 && electron-vite dev --inspect=5858 --mode=dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config"
  },
  "build": {
    "extraResources": [
      "./assets/**"
    ],
    "productName": "EasyChat",
    "appId": "com.easychat",
    "directories": {
      "output": "installPackages"
    },
    "afterSign": "./asarmor.js",
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./resources/icon.ico",
      "uninstallerIcon": "./resources/icon.ico",
      "installerHeaderIcon": "./resources/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EasyChat"
    },
    "mac": {
      "icon": "icons/icon.icns"
    },
    "win": {
      "artifactName": "${productName}Setup.${version}.exe",
      "icon": "resources/icon.ico",
      "target": [
        "nsis"
      ]
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.1",
    "@imengyu/vue3-context-menu": "^1.5.2",
    "axios": "^1.11.0",
    "dplayer": "^1.27.1",
    "electron-store": "^8.2.0",
    "element-plus": "^2.11.1",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.3.1",
    "js-md5": "^0.8.3",
    "moment": "^2.30.1",
    "pinia": "^2.3.1",
    "sqlite3": "5.1.6",
    "v-viewer": "^3.0.22",
    "vue-cookies": "^1.8.6",
    "vue-router": "^4.5.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@rushstack/eslint-patch": "^1.12.0",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "asarmor": "^2.0.0",
    "electron": "^28.3.1",
    "electron-builder": "^24.13.3",
    "electron-vite": "^1.0.29",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^9.33.0",
    "less": "^4.4.1",
    "node-gyp": "^10.3.1",
    "sass": "^1.80.3",
    "prettier": "^3.6.2",
    "vite": "^4.5.14",
    "vue": "^3.5.0"
  }
}
